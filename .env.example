# ============================================
# AWAKE BOARDS SA - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Generate secrets: .\scripts\generate-secrets.ps1
# ============================================

# ============================================
# GENERAL SETTINGS
# ============================================
ENVIRONMENT=development
# Set to 'production' when deploying

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# CACHE - Redis
# ============================================
REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# ============================================
# MEDUSA E-COMMERCE
# ============================================
MEDUSA_DATABASE_URL=postgres://medusa:medusa_password@postgres:5432/medusa
MEDUSA_REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
MEDUSA_JWT_SECRET=GENERATE_WITH_openssl_rand_hex_32
MEDUSA_COOKIE_SECRET=GENERATE_WITH_openssl_rand_hex_32
MEDUSA_STORE_CORS=http://localhost:3000,https://awakesa.co.za
MEDUSA_ADMIN_CORS=http://localhost:7000,https://admin.awakesa.co.za
# Admin API token for webhook to capture payments (generate after setup)
MEDUSA_ADMIN_SECRET=your-admin-api-token

# ============================================
# STOREFRONT - Next.js
# ============================================
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_STORE_URL=http://localhost:3000
NEXT_PUBLIC_CALCOM_EMBED_URL=http://localhost:3001

# ============================================
# PAYFAST - South African Payment Gateway
# ============================================
# Get credentials from https://www.payfast.co.za/
PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase
# Set to 'false' for production
PAYFAST_SANDBOX=true
# Public keys for Next.js storefront
NEXT_PUBLIC_PAYFAST_MERCHANT_ID=your-merchant-id
NEXT_PUBLIC_PAYFAST_MERCHANT_KEY=your-merchant-key
NEXT_PUBLIC_PAYFAST_MODE=sandbox

# ============================================
# CAL.COM - Booking System
# ============================================
CALCOM_DATABASE_URL=postgres://calcom:calcom_password@postgres:5432/calcom
CALCOM_NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_hex_32
CALCOM_CALENDSO_ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_hex_32

# ============================================
# TWENTY CRM
# ============================================
TWENTY_DATABASE_URL=postgres://twenty:twenty_password@postgres:5432/twenty
TWENTY_SERVER_URL=http://localhost:3002
TWENTY_FRONT_AUTH_URL=http://localhost:3002
TWENTY_API_KEY=generate-after-setup

# ============================================
# CHATWOOT - Customer Support
# ============================================
CHATWOOT_DATABASE_URL=postgres://chatwoot:chatwoot_password@postgres:5432/chatwoot
CHATWOOT_REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
CHATWOOT_SECRET_KEY_BASE=GENERATE_WITH_openssl_rand_hex_64

# Email configuration - GoDaddy Conversations
CHATWOOT_MAILER_SENDER_EMAIL=info@awakesa.co.za
CHATWOOT_SMTP_ADDRESS=smtpout.secureserver.net
CHATWOOT_SMTP_PORT=465
CHATWOOT_SMTP_USERNAME=awakesa-dot-co-dot-za@d5641ff5-d501-4a95-b7a6-c463d7eb55dc.mail.conversations.godaddy.com
CHATWOOT_SMTP_PASSWORD=your-godaddy-email-password

# API credentials (generate after setup)
CHATWOOT_API_KEY=generate-after-setup
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=1

# ============================================
# N8N - Workflow Automation
# ============================================
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_PASSWORD
N8N_ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_hex_16
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_DATABASE_TYPE=postgresdb
N8N_DATABASE_HOST=postgres
N8N_DATABASE_PORT=5432
N8N_DATABASE_NAME=n8n
N8N_DATABASE_USER=n8n
N8N_DATABASE_PASSWORD=n8n_password

# ============================================
# METABASE - Analytics
# ============================================
METABASE_DB_PASSWORD=metabase_password

# ============================================
# AUTHENTIK - SSO/Authentication
# ============================================
AUTHENTIK_DB_PASSWORD=authentik_password
AUTHENTIK_SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
AUTHENTIK_BOOTSTRAP_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
AUTHENTIK_BOOTSTRAP_EMAIL=admin@awakesa.co.za

# ============================================
# EMAIL - SMTP Configuration (GoDaddy)
# ============================================
# Your GoDaddy Conversations email
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=awakesa-dot-co-dot-za@d5641ff5-d501-4a95-b7a6-c463d7eb55dc.mail.conversations.godaddy.com
SMTP_PASSWORD=your-godaddy-email-password
SMTP_FROM_EMAIL=info@awakesa.co.za
SMTP_FROM_NAME=Awake SA

# ============================================
# PRODUCTION SSL (Optional)
# ============================================
SSL_EMAIL=admin@awakesa.co.za
DOMAIN=awakesa.co.za

# ============================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================
# WhatsApp Business API (if using)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# Google Analytics
NEXT_PUBLIC_GA_ID=

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=

# ============================================
# GOOGLE DRIVE INTEGRATION
# ============================================
# Get credentials from https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_DRIVE_CLIENT_ID=
NEXT_PUBLIC_GOOGLE_DRIVE_API_KEY=
NEXT_PUBLIC_GOOGLE_DRIVE_APP_ID=

# ============================================
# SUPABASE DATABASE
# ============================================
# Get credentials from https://supabase.com/dashboard
# Your project URL and anon/public key
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
# Service role key for server-side operations (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# MULTI-TENANT / WHITE-LABEL SETTINGS
# ============================================
# Default tenant slug for development
DEFAULT_TENANT_SLUG=awake
# Platform domain (for subdomain detection)
PLATFORM_DOMAIN=yoursaas.com
# Master admin email (for super-admin access)
MASTER_ADMIN_EMAIL=admin@yoursaas.com
# Master admin password hash (generate with bcrypt)
MASTER_ADMIN_PASSWORD_HASH=
# Master admin API key (for API authentication)
# Generate with: openssl rand -hex 32
MASTER_ADMIN_API_KEY=

# ============================================
# COGNICORE INVOICING INTEGRATION
# ============================================
# CogniCore base URL
NEXT_PUBLIC_COGNICORE_URL=https://cogni-core-invoicing-system.vercel.app
# Default business ID (for development)
NEXT_PUBLIC_COGNICORE_BUSINESS_ID=
