# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# Medusa Backend (Railway) - Will be set after Railway deployment
NEXT_PUBLIC_MEDUSA_URL=https://your-railway-app.up.railway.app
MEDUSA_API_KEY=your-medusa-admin-key

# PayFast Configuration
NEXT_PUBLIC_PAYFAST_MERCHANT_ID=your-merchant-id
NEXT_PUBLIC_PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-key
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google Drive Integration (for tenant product sync)
NEXT_PUBLIC_GOOGLE_DRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
NEXT_PUBLIC_GOOGLE_DRIVE_API_KEY=your-api-key
NEXT_PUBLIC_GOOGLE_DRIVE_APP_ID=your-app-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret  # Keep secret, not public

# Application URLs (for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000  # Change to https://yourdomain.com in production
NEXT_PUBLIC_ADMIN_URL=http://localhost:3000/admin
